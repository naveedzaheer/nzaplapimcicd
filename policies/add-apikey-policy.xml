<policies>
    <inbound>
        <base />
        <set-query-parameter name="appid" exists-action="override">
            <value>@{
                // Get the OpenWeatherMap API key from named values
                return context.Api.ServiceContext.NamedValues.GetValueOrDefault("openweathermap-api-key", "demo-key");
            }</value>
        </set-query-parameter>
        <set-header name="User-Agent" exists-action="override">
            <value>APIM-Demo/1.0</value>
        </set-header>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
        <!-- Transform response to add metadata -->
        <set-header name="X-API-Source" exists-action="override">
            <value>Azure APIM</value>
        </set-header>
        <set-header name="X-Environment" exists-action="override">
            <value>@(context.Deployment.ServiceName.Contains("dev") ? "Development" : "Production")</value>
        </set-header>
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>